<div class="album-wrapper">

  <%= render "shared/header" %>

  <!--写真欄-->
  <div class="pics-introduction album-intro">
    <div class="pic-contents">
      <h2 class="title">マイアルバム</h2>

      <div class="new-contribution">
        <div class="new-album-btn">
          <%= link_to "新規写真を投稿する", new_album_path %>
        </div>
      </div>

      <ul class="pic-lists">
        <% @albums.each do |album| %>
          <li class="list">
            <%= link_to "#" do %>
              <div class="pic-img-content">
                <%= image_tag album.image, class: "pic-img" if album.image.attached? %>
              </div>
              <div class="pic-info">
                <div class="pic-title">
                  <p><%= album.created_at %></p>
                  <h3><%= album.title %></h3>
                </div>
                <div class="pic-text">
                  <div class="text-box">
                    <p><%= album.text %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
        
        <li class="list">
          <div class="pic-img-content">
            <%= image_tag "camera_baby_mother.png", class: "pic-img" %>
          </div>
          <div class="pic-info">
            <div class="pic-title">
              <p>2021-01-04 07:22:44</p>
              <b>写真を投稿してね！</b>
            </div>
            <div class="pic-text">
              <div class="text-box">
                <p>ハイハイし始めた！！</p>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>


  <%= render "shared/footer" %>

</div>