<div class="devise-wrapper">

  <%= render "shared/second_header" %>

  <div class="devise-main-content">

    <div class="signup-title">
      <h2>新規登録</h2>
　　</div>

    <div class="registrations-main">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <label class="devise-label">ニックネーム</label><br>
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "devise-box", maxlength:"40" %>
        </div>
        <div class="field">
          <label class="devise-label">メールアドレス</label><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-box" %>
        </div>
        <div class="field">
          <label class="devise-label">生年月日</label><br>
            <div class="birth-box">
              <%= raw sprintf(
                            f.date_select(
                              :birthday,
                              class:'devise-box',
                              id:"birth-date",
                              use_month_numbers: true,
                              prompt:'--',
                              start_year: 1930,
                              end_year: (Time.now.year - 5),
                              date_separator: '%s'),
                            "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
            </div>
        </div>
        <div class="field">
          <label class="devise-label">パスワード</label><br>
          <% if @minimum_password_length %>
          <em>(最低 <%= @minimum_password_length %> 文字以上の半角英数字を入力してください。)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "devise-box" %>
        </div>
        <div class="field">
          <label class="devise-label">パスワード確認</label><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-box" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: "devise-submit" %>
        </div>
      <% end %>
    </div>

    <!--<%= render "devise/shared/links" %>-->
  </div>

  <%= render "shared/second_footer" %>

</div>